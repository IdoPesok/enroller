generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Courses {
  Code        String  @id @db.VarChar(10)
  Prefix      String  @db.VarChar(6)
  Number      Int
  MinUnits    Int
  MaxUnits    Int
  Name        String  @db.VarChar(128)
  Description String? @db.Text
  Prereqs     Json?

  @@fulltext([Code, Name])
  @@fulltext([Code, Name, Description])
}

model Prereqs {
  CourseCode String           @db.VarChar(8)
  Id         Int              @id @default(autoincrement())
  ParentId   Int?
  Variant    Prereqs_Variant
  PrereqCode String?          @db.VarChar(8)
  Type       Prereqs_Type?
}

enum Prereqs_Variant {
  and
  or
  prereq
}

enum Prereqs_Type {
  prerequisite
  corequisite
  reccomended
  concurrent
}
